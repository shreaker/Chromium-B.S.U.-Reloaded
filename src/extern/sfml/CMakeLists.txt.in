cmake_minimum_required(VERSION 3.10)
project(sfml-download LANGUAGES NONE)

include(ExternalProject)

ExternalProject_Add(sfml
    GIT_REPOSITORY https://github.com/SFML/SFML.git
    GIT_TAG 2.5.1
    GIT_CONFIG advice.detachedHead=false
    SOURCE_DIR "${EXTERNAL_INSTALL_LOCATION}/sfml-src"
    BINARY_DIR "${EXTERNAL_INSTALL_LOCATION}/sfml-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
