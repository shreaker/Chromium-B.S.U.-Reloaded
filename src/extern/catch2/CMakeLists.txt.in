cmake_minimum_required(VERSION 3.10)
project(catch2-download LANGUAGES NONE)

include(ExternalProject)

ExternalProject_Add(catch2
    GIT_REPOSITORY https://github.com/catchorg/Catch2.git
    GIT_TAG v2.9.2
    GIT_CONFIG advice.detachedHead=false
    SOURCE_DIR "${EXTERNAL_INSTALL_LOCATION}/catch2-src"
    BINARY_DIR "${EXTERNAL_INSTALL_LOCATION}/catch2-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
